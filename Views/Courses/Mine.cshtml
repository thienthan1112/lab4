@model IEnumerable<lab4.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mine</h2>

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="date">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture">
                        @course.LectureName
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>

                </div>
                <div class="action">
                    <a href="@Url.Action("EditCourse", "Courses", new { id = course.ID })">Edit</a>
                    <a href="@Url.Action("DeleteCourse","Courses", new { id = course.ID })">Delete</a>
                </div>
            </li>
        }
    </ul>
</div>
